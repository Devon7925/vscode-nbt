{
	"compilerOptions": {
		"target": "es2017",
		"module": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": ["dom", "esnext"],
		"outDir": "out",
		"sourceMap": true,
		"rootDir": "src",
		"strict": false,
		"strictNullChecks": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
	},
	"ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
	"include": [
		"src"
	]
}
